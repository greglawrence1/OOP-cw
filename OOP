import java.awt.Color;
import java.awt.FlowLayout;
import javax.swing.JFrame;
import uk.ac.leedsbeckett.oop.LBUGraphics;



public class GraphicsSystem extends LBUGraphics
{

        public GraphicsSystem()
        {
            JFrame MainFrame = new JFrame();           
            MainFrame.setLayout(new FlowLayout());      
            MainFrame.add(this);                                        
            MainFrame.pack();                                           
            MainFrame.setVisible(true);                         
        }
        
        private final String[] VALID_COMMANDS = 
 {"reset", "turnLeft", "turnRight", "getPenColour", "penUp", 
		 "penDown", "forward", "clear", "backward", "green", "orange", "red", "white"};
    

 		@Override
 		public void processCommand(String command)     
        {
 			
                String[] commands = command.split(" ");
                
                {
                switch (commands[0]) 
                {
                case "about":
                	about();
                	break;             	
                case "penUp":
                	Boolean penUp1 = true;
                	Boolean penDown1 = false;
                	if(penUp1)
                	{
                		penUp();
                	}
                	if(penDown1)
                	{
                		penDown();
                	}
                	break;
                case "penDown":
                	Boolean penDown2 = true;
                	Boolean penUp2 = false;
                	if(penDown2)
                	{
                		penDown();
                	}
                	if(penUp2)
                	{
                		penUp();
                	}
                	break;
                case "clear":
                	clear();
                	break;
                case "reset":
                	reset();
                	turnLeft(90);
                	break;
                case "turnLeft":
                	String left = commands[1];
                	turnLeft(left);
         			break;
                case "turnRight":
                	String right = commands[1];
                	turnRight(right);
                	break;
                case "forward":
                	String forwards = commands[1];
                	forward(forwards);
                	break;
                case "backward":
                	String backwards = commands[1];
                	int back = Integer.parseInt(backwards);
                	back = -back;
                	forward(back);
                	break;
                case "green":
                	String green = commands[0];
                	Color.getColor(green);
                	break;
                case "white":
                	String white = commands[0];
                	Color.getColor(white);
                	break;
                }
        }

}
}


import java.util.Arrays;

public class Validator {
    
	private final String[] VALID_COMMANDS = 
    	{"reset", "turnLeft", "turnRight", "getPenColour", "penUp", 
    		"penDown", "forward", "clear", "backward",
    		"green", "orange", "red", "white"};

	public Validator()
	{
		
	}
	
	boolean CommandValid(String command)
	{
		boolean valid = Arrays.stream(VALID_COMMANDS).anyMatch(command::equals);
		
		return valid;
	}
	
	public void ReasonableNumberCheck(String command)
	{
		int commands = Integer.parseInt(command); 
		while (commands > 1000 || commands < 0)
		{
			System.out.println("Please Enter a number below 1000 and Greater than zero ");
			System.exit(commands);
		}
		if (commands < 1000 && commands > 0)
		{
			return;	
		}
	}
	
	boolean NumberCheck(String number)
	{
		try
		{
			Integer.parseInt(number);
			return true;
		}
		catch (Exception E)
		{
			System.out.println("This is not a Valid Number");
			return false;
		}
	}
}
